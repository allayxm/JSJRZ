@model MXKJ.JSJRZ.WebUI.Models.SelfStatement.InputStatementViewModel
@using System.Web.Optimization
@{
    ViewBag.Title = "自我陈述";
    Layout = "~/Views/Shared/_LayoutStatement.cshtml";
}
@section JS {
    @Scripts.Render("~/bundles/jqueryval")

}
<body class="hold-transition sidebar-mini" s style="background-color:#ecf0f5;">
    <div class="wrapper">
        <!-- Content Wrapper. Contains page content -->
        <div>
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    自我陈述
                </h1>
            </section>
            <!-- Main content -->
            <section class="content">
                @using (Html.BeginForm("InputStatement", "SelfStatement", FormMethod.Post, new { role = "form" }))
                {
                    <div class="row">
                        <!-- left column -->
                        <div class="col-md-12">
                            <!-- general form elements -->
                            <div class="box box-primary">
                                <div class="box-header with-border text-right">
                                    <h3 class="box-title"><button type="submit" class="btn btn-danger">保存</button></h3>
                                    <h4 class="text-left">
                                        <p>@Html.ValidationSummary(true, "", new { @class = "text-danger" })</p>
                                        @*<p>@Html.ValidationMessageFor(m => m.DormitoryID, "", new { @class = "text-danger" })</p>
                                        <p>@Html.ValidationMessageFor(m => m.Floor, "", new { @class = "text-danger" })</p>
                                        <p>@Html.ValidationMessageFor(m => m.BedNumber, "", new { @class = "text-danger" })</p>*@
                                    </h4>
                                </div><!-- /.box-header -->
                                <!-- form start -->
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="box-body">
                                            <div class="form-group">
                                                <h3 class="text-center">
                                                    @DateTime.Now.Year <label>年</label>
                                                    @if (DateTime.Now.Month <= 0)
                                                    {
                                                        <label>下学期</label>
                                                    }
                                                    else
                                                    {
                                                        <label>上学期</label>
                                                    }
                                                </h3>
                                            </div>
                                            <div class="form-group text-center">
                                                @Html.TextAreaFor(m=>m.Statement, new { @class = "form-control", style = "height:200px", placeholder = "请输入自我陈述" })
                                                @Html.HiddenFor(m => m.StudentID)
                                                @*@Html.TextBoxFor(m => m.Floor, new { @class = "form-control", placeholder = "请输入楼层" })*@
                                            </div>
                                          
                                        </div><!-- /.box-body -->

                                    </div>

                                </div>
                            </div><!-- /.box -->
                        </div><!--/.col (left) -->
                    </div>   <!-- /.row -->
                }
            </section><!-- /.content -->
        </div><!-- /.content-wrapper -->
    </div><!-- ./wrapper -->
</body>

